{
  "extends": "@vibe/config/react.tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@components*": ["src/components*"],
      "@hooks*": ["src/hooks*"],
      "@lib*": ["src/lib*"],
      "@ui*": ["src/components/ui*"]
    },
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/styles/index.css",
    ".next/types/**/*.ts"
  ]
}
